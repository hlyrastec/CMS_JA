<html>
	<head>
        <% include ./../partials/head %>
	</head>
	<body>
		<header>
			<div onclick="window.location.href='/'" href="#default" class="favicon"><img class="image" src="/images/favicon.png"></div>
			<div class="right">
			<a onclick="let r = confirm('deseja sair?');if(r==true){window.location.href='/logout'}">Sair</a>
			</div>
		</header>
        <% include ./../partials/nav %>
		<section>
			<div class="container">
				<div class="box-2">
                    <h3 class="underline-title">Cadastrar Categoria de Receita</h3><br>
					<form id="income-category-create-form" class="box-1">
						<input type="hidden" name="category_id" value="0" autocomplete="off">
						<input type="text" class="btn-generic-big" name="category_name" placeholder="Nome da categoria" autocomplete="off">
						<input type="submit" class="btn-generic-big" id="income-category-create-submit" value="Cadastrar">
					</form>
	                <button onclick="displayIncomeCategories()" id="displayIncomeCategoryBtn" autocomplete="off" disabled>&darr;&darr;</button>
					<form id="income-category-filter-form" class="box-1">
                    	<h4 class="underline-title">Filtrar Categorias de Receita</h4><br>
						<input type="text" name="category_name" class="btn-generic-big" placeholder="Nome da categoria" autocomplete="off">
						<input type="submit" class="btn-generic-big" id="income-category-filter-submit" value="Filtrar">
					</form>
					<div id="income-category-div">
						<table class="tbl-info" id="income-category-tbl"></table>
						<br>
						<button id="incomeCategoryPrevious" autocomplete="off" disabled>&lsaquo;&lsaquo;</button>
	                    <span id="incomeCategoryPageNumber"></span>
	                    <button id="incomeCategoryNext" autocomplete="off" disabled>&rsaquo;&rsaquo;</button><br><br>
					</div>
				</div>
				<div class="box-2">
                    <h3 class="underline-title">Origem da receita</h3><br>
					<form id="income-origin-create-form" class="box-1">
						<select class="btn-generic-big" id="income_category-origin-select">
							<option value="">Categoria</option>
							<% for(i in incomeCategories){ %>
								<option value="<%= incomeCategories[i].id %>"><%= incomeCategories[i].name %></option>
							<% }%>
						</select>
						<input type="text" class="btn-generic-big" name="income_origin_name" placeholder="Origem da receita">
						<input type="submit" class="btn-generic-big" id="income-origin-create-submit" value="Cadastrar">
					</form>
					<form id="income-origin-filter-form" class="box-1">
                    	<h4 class="underline-title">Filtrar Origens de receita</h4><br>
						<input type="text" name="income_origin_name" class="btn-generic-big" placeholder="Nome" autocomplete="off">
						<input type="submit" class="btn-generic-big" id="income-origin-filter-submit" value="Filtrar">
					</form>
				</div>
			</div>
		</section>
	</body>
	<footer>
        <% include ./../partials/footer %>
        <% include ./partial %>
	</footer>
</html>